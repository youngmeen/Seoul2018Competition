<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd1d1"
    tools:context=".SignUpActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolbarColor"
        android:minHeight="?attr/actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="긴급모드"
            android:textColor="#f6f5f5"
            android:textSize="20sp"
            android:textStyle="bold" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:orientation="horizontal"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/closbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/gi1" />

    </LinearLayout>


    <!--2엄마-->
    <LinearLayout
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/log"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">
        <!--1-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <EditText
                android:id="@+id/signupActivity_edittext_id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#fff"
                android:hint="   아이디"
                android:inputType="textEmailAddress" />

        </LinearLayout>
        <!--2-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">



                <EditText
                    android:layout_marginTop="15dp"
                    android:id="@+id/signupActivity_edittext_password"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#fff"
                    android:hint="   비밀번호"
                    android:inputType="textPassword" />

        </LinearLayout>
        <!--3-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <EditText
                android:id="@+id/signupActivity_edittext_place"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#fff"
                android:hint="   지점"
                android:inputType="textAutoComplete" />
        </LinearLayout>
        <!--4-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">


            <EditText
                android:id="@+id/signupActivity_edittext_name"
                android:layout_marginTop="15dp"

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#fff"
                android:hint="   등록자"
                android:inputType="textAutoComplete" />

        </LinearLayout>
        <!--5-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="20dp">

            <Button
                android:id="@+id/signupActivity_button_signup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/toolbarColor"
                android:text="회원가입"
                android:textColor="#f6f5f5"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
        <!--끝-->
    </LinearLayout>


</RelativeLayout>